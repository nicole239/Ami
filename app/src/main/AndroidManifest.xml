<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ec.tec.ami">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/circular_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/circular_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activities.PostActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".views.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.activities.CreateAccountEmailActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".views.activities.EducationActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".views.activities.EditAccountActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".views.activities.CreateAccountActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".views.activities.LoginActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>